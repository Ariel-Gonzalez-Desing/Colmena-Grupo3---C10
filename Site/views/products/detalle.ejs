<!DOCTYPE html>
<html lang="es">

  <%-include('../partials/head') %>
  
  <body>

    <%-include('../partials/header') %>

    <main class="detalle">
      <div class="imagenProducto">
        <img src="/images/<%= product.image %>" alt="foto pote de miel" />
      </div>

      <div class="detallesProducto">
        <h2><%= product.name %></h2>

        <p>
          <%= product.description %>
        </p>

        <h3>$<%= product.price %>.-</h3>
        <h4>12 cuotas de $<%= cuota (Math.round(product.price)).toFixed(2) %></h4>

        <div class="cantidad-boton">
          <div class="masMenos">
            <form action="">
              <button>-</button>
              <input type="text" value="0" />
              <button>+</button>
            </form>
          </div>
          <button class="button">AGREGAR AL CARRITO</button>
        </div>
      </div>
    </main>

    <%-include('../partials/footer') %>
  </body>
</html>
