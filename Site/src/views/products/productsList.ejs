<!DOCTYPE html>
<html lang="es">

  <%-include('../partials/head') %>
  
  <body>

    <%-include('../partials/header') %>

    <main class="productsList">
      <h2><%= title %></h2>
        <section>
            <div class="productos">
                <div class="prodGrupo">
                    <% products.forEach(product => { %>
                      <div class="prodUnidad">
                        <a href="/products/detail/<%= product.id %>"><img src="/images/products/<%= product.images[0].file %>" alt="imagen de producto">
                            <p><%= firstLetter(product.name) %><br><%= firstLetter(product.size.name) %></p>
                            <a href="/products/detail/<%= product.id %>" class="button">VER MAS</a></a>
                    </div>
                    <% }) %>
                                     
                </div>                
            </div>
            
        </section>
    </main>

    <%-include('../partials/footer') %>
  </body>
</html>
