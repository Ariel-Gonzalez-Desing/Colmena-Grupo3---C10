<!DOCTYPE html>
<html lang="en">

    <%-include('../partials/head')%>

<body class="admin">

   <%-include('../partials/header')%>
   
    <div class="cabecera">
      <h3>Administrador de Usuarios</h3>    
       
    </div>
    <table summary="Listado de usuarios">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Email</th>            
            <th scope="col">Editar</th>
          </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>            
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><a href=""><img src="/images/users/<%= user.avatar%>" alt="imagen de usuario"></a></td>
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><div class="iconos"><a href="/products/edit/<%= user.id %> "><i class="fas fa-edit"></i></a>
              
              <form action="/products/delete/<%= user.id %>?_method=DELETE" method="POST">
              <button><i class="fas fa-trash-alt"></i></button>
            </form>
            
            </div></td>
          </tr>
          <% }) %>
        </tbody>
        
      </table>
</body>
</html>